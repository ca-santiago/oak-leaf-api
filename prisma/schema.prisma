generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Account {
  id            String   @id @default(uuid())
  externalId    String
  preferredName String?
  contactEmail  String
  imageUri      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())

  planType     String
  planEndDate    DateTime
  planInitDate DateTime

  @@unique([externalId])
}

