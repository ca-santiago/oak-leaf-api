generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Profile {
  id            String   @id @default(uuid())
  userId        String
  preferredName String?
  descrition    String?
  imageUri      String?
  updatedAt     DateTime @default(now())
}

model Habit {
  id          String       @id @default(uuid())
  userId      String
  habitName   String
  description String?
  createdAt   DateTime     @default(now())
  // Other fields related to your habit can be added here
  completions Completion[]
  //  ["2023-12-01:2023-12-04", "2023-12-11:2023-12-12"]
  incidences  Incidence[]

  @@index([userId])
  @@index([id])
}

model Incidence {
  id         String   @id @default(uuid())
  habit      Habit    @relation(fields: [habitId], references: [id])
  createdAt  DateTime
  habitId    String
  // Serealized from Code
  dateRanges String
  // Segment db records per year
  yearRange  String

  @@index([habitId, yearRange])
}

model Completion {
  id             String   @id @default(uuid())
  habit          Habit    @relation(fields: [habitId], references: [id])
  habitId        String
  completionDate DateTime
  completed      Boolean
  // // Yes
  // endDate        DateTime
  // startDate      DateTime

  @@index([habitId])
  // @@index([startDate, endDate])
  @@index([completionDate])
  @@index([completionDate, habitId])
}
