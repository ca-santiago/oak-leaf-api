generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Profile {
  id            String   @id @default(uuid())
  userId        String
  preferredName String?
  descrition    String?
  imageUri      String?
  updatedAt     DateTime @default(now())
}

model Habit {
  id          String      @id @default(uuid())
  userId      String
  habitName   String
  description String?
  createdAt   DateTime    @default(now())
  incidences  Incidence[]

  iconKey  String
  colorKey String

  @@index([userId])
  @@index([id])
}

model Incidence {
  id         String   @id @default(uuid())
  habit      Habit    @relation(fields: [habitId], references: [id])
  createdAt  DateTime @default(now())
  habitId    String
  // Serealized from Code
  dateRanges String   @db.LongText
  // Segment db records per year
  yearRange  String

  @@index([habitId, yearRange])
}
