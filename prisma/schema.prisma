model AccountInvite {
  id           String   @id @default(uuid())
  accountId    String
  inviteCode   String
  createdAt    DateTime @default(now())
  usedByUserId String?
}

model Habit {
  id          String      @id @default(uuid())
  userId      String
  habitName   String
  description String?
  createdAt   DateTime    @default(now())
  completions String      @db.Text()

  iconKey  String
  colorKey String

  @@index([userId])
  @@index([id])
}
